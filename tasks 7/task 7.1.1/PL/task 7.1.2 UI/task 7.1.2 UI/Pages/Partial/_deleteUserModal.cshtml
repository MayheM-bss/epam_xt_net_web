@{
    Layout = "~/Pages/_LayoutModal.cshtml";
    Page["id"] = "deleteUser";
}
<div class="modal-header">
    <h5 class="modal-title" id="ModalLabel">Удаление пользователя</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form action="~/Pages/DeleteUser.cshtml" method="post">
    <div class="modal-body">
        <label for="userID">Введите ID пользователя</label>
        <input id="userID" name="userID" class="form-control" type="text" placeholder="" required pattern="(^[0-9a-zA-Z]{8}-([0-9a-zA-Z]{4}-){3}[0-9a-zA-Z]{12}?$)">
        <small class="form-text text-muted">
            Пример ID: @Guid.NewGuid()
        </small>
    </div>
    <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">Закрыть форму</button>
        <button type="submit" class="btn btn-primary">Удалить пользователя</button>
    </div>
</form>

